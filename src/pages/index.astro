---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Project from "../components/Project.astro";

import github from "../images/github.svg";
import linkedin from "../images/linkedin.svg";
import mail from "../images/mail.svg";
import { data } from "../data";
---

<Layout title="Elian Gerard">
	<main
		class="relative z-30 min-h-screen flex flex-col items-center min-w-full w-full p-4 md:p-0"
	>
		<div class="flex flex-col items-center max-w-screen-md w-full">
			<div class="h-screen flex items-center justify-center w-full">
				<div class="relative md:px-12 md:p-0 w-full md:w-fit z-10">
					<div class="flex items-end justify-between">
						<p
							class="font-[MuseoModerno] font-bold text-2xl md:text-5xl w-40"
						>
							Hi! I'm
						</p>
					</div>
					<div class="group right-1/3 md:right-1/2 top-1/2 w-fit absolute translate-x-1/2 -translate-y-1/2 -z-10">
						<p class="group-hover:opacity-100 transition-all opacity-0">That's me!</p>
						<div class="overflow-hidden relative rounded-xl group-hover:ring-[1px] bg-white/[0.02] ring-white/20 h-[475px] w-[250px] transition-all backdrop-blur-sm">
							<img class="h-full object-cover" src="/me.webp" alt="">
						</div>
					</div>
					<div class="relative w-full">
						<h1
							class="font-bold font-[Montserrat] text-7xl w-32 md:w-fit md-fit md:text-8xl text-left -ml-[5px]"
						>
							{data.me.name}
						</h1>
					</div>
					<span
						class="flex flex-col md:flex-row items-left justify-between md:items-center"
					>
						<p class="text-xl mb-2 md:mb-0 md:text-4xl opacity-50 font-semibold">
							{data.me.title}
						</p>
						<div class="flex items-center">
							<a
								href="https://github.com/eliangerard/"
								target="_blank"
								class="h-full w-12 hover:ring-[1px] ring-white/20 p-2 bg-white/[0.06] hover:bg-white/[0.1] rounded-lg font-bold text-black/50 transition-all"
							>
								<img
									class="h-8 w-8"
									src={github.src}
									alt="github"
								/>
							</a>
							<a
								href="https://www.linkedin.com/in/eliangerard/"
								target="_blank"
								class="h-full w-12 hover:ring-[1px] ring-white/20 p-2 ml-2 bg-white/[0.06] hover:bg-white/[0.1] rounded-lg font-bold text-black/50 transition-all"
							>
								<img
									class="h-8 w-8"
									src={linkedin.src}
									alt="linkedin"
								/>
							</a>
							<a
								href="mailto:eliangerardiso@gmail.com"
								target="_blank"
								class="h-full w-12 p-2 hover:ring-[1px] ring-white/20 ml-2 bg-white/[0.06] hover:bg-white/[0.1] rounded-lg font-bold text-black/50 transition-all"
							>
								<img
									class="h-8 w-8"
									src={mail.src}
									alt="linkedin"
								/>
							</a>
						</div>
					</span>
				</div>
			</div>
			<div id="about" class="pt-32">
				<h2 class="font-bold text-3xl font-[MuseoModerno]">About</h2>
				<p class="font-light opacity-75 text-lg text-pretty">
					{data.me.about}
				</p>
			</div>
			<div id="experience" class="pt-32">
				<h2 class="font-bold text-3xl font-[MuseoModerno] my-4">
					Experience
				</h2>

				<ul>
					{
						data.experience.map((experience) => (
							<Card
								title={experience.title}
								subtitle={experience.subtitle}
								date={experience.data}
								body={experience.description}
								link={experience.link}
							/>
						))
					}
				</ul>
			</div>
			<div id="skills" class="pt-32">
				<h2 class="font-bold text-3xl font-[MuseoModerno] my-4">
					Skills
				</h2>

				<ul>
					{
						data.skills.map((skill) => (
							<Card
								title={skill.title}
								subtitle={skill.subtitle}
								date={skill.data}
								body={skill.description}
								link={skill.link}
							/>
						))
					}
				</ul>
			</div>
			<div id="projects" class="pt-32 w-full pb-32">
				<h2 class="font-bold text-3xl font-[MuseoModerno] my-4">
					Projects
				</h2>

				<ul class="flex flex-col md:flex-row md:flex-wrap md:px-4">
					{
						data.projects.map((project) => (
							<Project
								title={project.title}
								description={project.description}
								image={project.image}
								link={project.link}
								technologies={project.technologies}
							/>
						))
					}
				</ul>
			</div>
		</div>
	</main>
</Layout>
