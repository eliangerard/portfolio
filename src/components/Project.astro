---
import Link from "../ui/icons/Link.astro";

interface Props {
    title: string;
    description: string;
    image?: string;
    left?: boolean;
    link?: string;
}

const { title, description, left = true, image, link } = Astro.props;
---

<li
    class={`bg-black/0 hover:bg-white/[0.05] hover:backdrop-blur-xl hover:ring-1 ring-white/20 rounded-xl m-2 p-4 flex flex-col min-w-1/2 w-full transition-all`}
>
    {
        image ? (
            <img
                class="w-full h-[400px] object-cover rounded-lg"
                src={image}
                alt={title}
            />
        ) : (
            <p class="w-full h-[400px] flex items-center justify-center font-bold text-3xl bg-white/25 text-black/50 rounded-xl">
                {title}
            </p>
        )
    }

    <div class="mt-2">
        <div class="flex items-center">
            <h3 class="font-semibold text-2xl my-1">{title}</h3>
            {
                link && (
                    <a href={link} target="_blank">
                        <Link />
                    </a>
                )
            }
        </div>
        <p class="font-light opacity-75 text-lg text-pretty">
            {description}
        </p>
    </div>
</li>
