---
import Dot from "../images/dot.svg";
import Link from "../ui/icons/Link.astro";

interface Props {
	title: string;
	subtitle: string;
	body?: string;
	responsabilites?: string[];
	accomplishments?: string[];
	date: string;
	link?: string;
}

const { title, subtitle, body, date, link, responsabilites, accomplishments } =
	Astro.props;
---

<li class="group flex items-start mb-4 w-full">
	<img
		src={Dot.src}
		class="h-5 md:h-7 mt-4 mr-3 md:mt-3 md:mr-4 md:mr-6 group-hover:rotate-[60deg] transition-all"
		alt={title}
	/>
	<div class="flex-1">
		<span class="flex flex-col md:flex-row justify-between mt-2">
			<div class="flex">
				<h3 class="font-semibold text-2xl my-1">
					{title}
				</h3>
				
			</div>
			<div class="flex items-center">
				{
					link ? (
						<a
							href={link}
							target="_blank"
							class="flex items-center rounded-full bg-white/0 -ml-4 my-1 p-1 px-4 hover:bg-white/[0.05] hover:ring-1 ring-white/20 transition-all"
						>
							<p class="font-semibold italic">{date}</p>
							<Link />
						</a>
					) : (
						<p class="font-semibold italic md:px-4">{date}</p>
					)
				}
			</div>
		</span>
		<p class="opacity-85 font-medium text-xl mb-1">
			{subtitle}
		</p>
		{body && <p class="font-light opacity-75 text-lg mt-1">{body}</p>}
		{
			responsabilites && (
				<div class="">
					<h4 class="font-medium text-lg mt-2">Responsabilites:</h4>
					<ul class="list-disc mt-2 ml-6">
						{responsabilites.map((responsability) => (
							<li class="font-light opacity-75 text-lg">
								{responsability}
							</li>
						))}
					</ul>
				</div>
			)
		}
		{
			accomplishments && (
				<div class="">
					<h4 class="font-medium text-lg mt-2">Accomplishments:</h4>
					<ul class="list-disc  ml-6 mt-2">
						{accomplishments.map((accomplishment) => (
							<li class="font-light opacity-75 text-lg">
								{accomplishment}
							</li>
						))}
					</ul>
				</div>
			)
		}
	</div>
</li>
